


doctype html
html
  head
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
    meta(charset='utf-8')
    link(href='https://fonts.googleapis.com/css?family=Roboto&amp;subset=cyrillic', rel='stylesheet')
    link(href='/infographic-static/app.min.css', rel='stylesheet', type='text/css')
  body
    #preloader
      img(src="/infographic-static/img/default.svg")

    #mobile-div
    #header: img(src='/infographic-static/img/logo-title-ru@2x.png')
